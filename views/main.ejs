<script src="/plugins/apex/apexcharts.min.js"></script>
<script>
    <%
    let shoeCount = 0;
    let vestCount = 0;
    let hatCount = 0;
    let shoeCount_m1 = 0;
    let vestCount_m1 = 0;
    let hatCount_m1 = 0;
    let shoeCount_m2 = 0;
    let vestCount_m2 = 0;
    let hatCount_m2 = 0;
    let shoeCount_m3 = 0;
    let vestCount_m3 = 0;
    let hatCount_m3 = 0;
    let shoeCount_m4 = 0;
    let vestCount_m4 = 0;
    let hatCount_m4 = 0;
    let ppeCount = 0;
    let behaviourCount = 0;
    let intrusionCount = 0;
    var one_day = 1000 * 60 * 60 * 24;
    let today = new Date();
    today.setHours(0, 0, 0, 0);
    if (alerts && Object.keys(alerts).length > 0) {
        alerts.forEach((alert, index) => {
            if (alert.alertMessage.substr(0, 1) !== '0') {
                ppeCount++;
            }
            if (alert.alertMessage.substr(1, 1) !== '0') {
                ppeCount++;
            }
            if (alert.alertMessage.substr(2, 1) !== '0') {
                intrusionCount++;
            }
            if (alert.alertMessage.substr(3, 1) !== '0' && alert.alertMessage.substr(3, 1) !== '1') {
                behaviourCount++;
            }
            if (alert.alertMessage.substr(4, 1) !== '0' && alert.alertMessage.substr(4, 1) !== '1') {
                behaviourCount++;
            }
            let compareDate = new Date(alert.alertTime * 1000);
            compareDate.setHours(0, 0, 0, 0);
            if (Math.round((today.getTime() - compareDate.getTime()) / one_day) === 0) {
                if (alert.alertMessage.substr(0, 1) !== '0') {
                    hatCount++;
                }
                if (alert.alertMessage.substr(1, 1) !== '0') {
                    vestCount++;
                }
            }
            if (Math.round((today.getTime() - compareDate.getTime()) / one_day) === 1) {
                if (alert.alertMessage.substr(0, 1) !== '0') {
                    hatCount_m1++;
                }
                if (alert.alertMessage.substr(1, 1) !== '0') {
                    vestCount_m1++;
                }
            }
            if (Math.round((today.getTime() - compareDate.getTime()) / one_day) === 2) {
                if (alert.alertMessage.substr(0, 1) !== '0') {
                    hatCount_m2++;
                }
                if (alert.alertMessage.substr(1, 1) !== '0') {
                    vestCount_m2++;
                }
            }
            if (Math.round((today.getTime() - compareDate.getTime()) / one_day) === 3) {
                if (alert.alertMessage.substr(0, 1) !== '0') {
                    hatCount_m3++;
                }
                if (alert.alertMessage.substr(1, 1) !== '0') {
                    vestCount_m3++;
                }
            }
            if (Math.round((today.getTime() - compareDate.getTime()) / one_day) === 4) {
                if (alert.alertMessage.substr(0, 1) !== '0') {
                    hatCount_m4++;
                }
                if (alert.alertMessage.substr(1, 1) !== '0') {
                    vestCount_m4++;
                }
            }
        });
    } %>
    let sColStacked = {
        chart: {
            height: 350,
            type: 'bar',
            stacked: true,
            toolbar: {
                show: false,
            }
        },
        responsive: [{
            breakpoint: 480,
            options: {
                legend: {
                    position: 'bottom',
                    offsetX: -10,
                    offsetY: 0
                }
            }
        }],
        plotOptions: {
            bar: {
                horizontal: false,
            },
        },
        series: [{
            name: 'VEST',
            data: [<%= vestCount_m4 %>, <%= vestCount_m3 %>, <%= vestCount_m2 %>, <%= vestCount_m1 %>, <%= vestCount %>]
        }, {
            name: 'HAT',
            data: [<%= hatCount_m4 %>, <%= hatCount_m3 %>, <%= hatCount_m2 %>, <%= hatCount_m1 %>, <%= hatCount %>]
        }, {
            name: 'SHOES',
            data: [0, 0, 0, 0, 0]
        }],
        xaxis: {
            type: 'datetime',
            categories: ['<%= new Date(Date.now() - 3456e5).toDateString() %>', '<%= new Date(Date.now() - 2592e5).toDateString() %>', '<%= new Date(Date.now() - 1728e5).toDateString() %>', '<%= new Date(Date.now() - 864e5).toDateString() %>', '<%= new Date().toDateString() %>'],
        },
        legend: {
            position: 'right',
            offsetY: 40
        },
        fill: {
            opacity: 1
        },
    }

    let chart = new ApexCharts(
        document.querySelector("#s-col-stacked"),
        sColStacked
    );

    chart.render();

    let donutChart = {
        chart: {
            height: 350,
            type: 'donut',
            toolbar: {
                show: false,
            }
        },

        series: [<%= ppeCount %>, <%= intrusionCount %>, <%= behaviourCount %>],
        labels: ['PPE Compliance', 'Intrusion', 'Unsafe Behaviour'],
        responsive: [{
            breakpoint: 480,
            options: {
                chart: {
                    width: 200
                },
                legend: {
                    position: 'bottom'
                }
            }
        }]
    }

    let donut = new ApexCharts(
        document.querySelector("#donut-chart"),
        donutChart
    );

    donut.render();

</script>
